    <script type="text/javascript" src="/scripts/app.js"></script>

    <script type="text/javascript" src="/scripts/eventpage.js"></script>

  </head>

  <header>
    <% include ./partials/_nav %>
  </header>

  <body>

    <!-- Page-specific (main) content here -->
    <main class="event_container">
      <div class="shadow p-3 mb-5">

      <section class="link">

        <p class='shorturl' hidden><%= url %></p>
        <p class='url'><%= "localhost:8080/api/users/new/" + url %></p>

      </section>

      <section class="poll-table">


        <table class="table">
          <tbody class="table-body">

          </tbody>
        </table>

        <p class="email-notifications"> Register for notifications</p>
        <form class="add_participant">
          <div class="form-group form-inline">
            <label>Name:</label>
            <input type="text" class="email-name form-control" id="email-name" placeholder="Name">
            <label>Email:</label>
            <input type="text" class="email-email form-control" id="email-email" placeholder="Email">
          </div>
        </form>



        <form class="submit_finish">
          <div class="error-message" hidden></div>
          <button class="submit btn btn-success" id="buttonforadding" type="submit">Submit</button>
        </form>

      </section>
    </div>

    </main>

    <% include ./partials/_footer %>

  </body>

</html>

